  <%= image_tag @post.post_photo, style: "width: 800px; display: block;" %>
  <%= @post.caption %>

  <%= form_for ([@post, @comment]) do |f| %>
    <%= f.text_field :content %>
    <%= f.submit 'Comment'%>
  <% end %>

  <% @post.comments.each do |comment| %>
    <%= comment.user.username %>
    <%= comment.content %>
    <br>
  <% end %>
