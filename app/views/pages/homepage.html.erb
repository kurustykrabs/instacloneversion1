<div class="relative">

  <%= image_tag 'front.png', width: 800, id: 'iphone', class: 'absolute' %>

  <div class="text-center absolute" id='igLogo'>
  <%= image_tag 'text 1.png', width: 200 %>
  </div>

<%= form_with(url:login_path) do |f| %>

<div class="text-center absolute" id="field">
<%= f.label :email %>
<%= f.text_field :email %>
</div>

<div class="text-center absolute" id="password">
<%= f.label :password %>
<%= f.password_field :password %>
</div>

<div class="text-center absolute" id="login">
<%# <%= link_to 'Login', login_path %>
<%= f.submit 'Login' %>
</div>

<% end %>

<div class="text-center absolute" id="signup">
<p>Don't have an account? <%= link_to 'Sign Up', new_user_path %></p>
</div>
<%# <%= link_to 'about', about_path %>

</div>
